{
  "name": "quickjs-typescript",
  "version": "0.1.0",
  "main": "build/js/quickjs.js",
  "license": "MIT",
  "scripts": {
    "update-quickjs": "git subtree pull --prefix=quickjs --squash git@github.com:ldarren/QuickJS.git mod",
    "make-debug": "make DEBUG=1",
    "make-release": "make clean && make",
    "clean": "make clean",
    "build": "tsc",
    "watch": "tsc --watch",
    "run-ts": "yarn make-debug && ts-node ./ts/examples/hello.ts",
    "run-n": "yarn make-debug && ./build/wrapper/native/test.exe"
  },
  "devDependencies": {
    "@types/emscripten": "^1.38.0",
    "@types/node": "^13.1.4",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  }
}
